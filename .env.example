# ============================================
# 비파이(B-FAI) 백엔드 환경 변수 템플릿
# ============================================
#
# 📝 사용 방법:
# 1. 이 파일을 복사해서 .env.local 생성
# 2. 모든 YOUR_XXX_HERE를 실제 값으로 변경
# 3. .env.local은 Git에 커밋하지 마세요!
#
# 명령어:
# cp .env.example .env.local
# ============================================

# ============================================
# 데이터베이스 설정
# ============================================

# Docker Compose 사용 시 (기본값)
DATABASE_URL=postgresql://bfai_user:bfai_password@db:5432/bfai_db
DB_HOST=db
DB_PORT=5432
DB_NAME=bfai_db
DB_USER=bfai_user
DB_PASSWORD=bfai_password

# 로컬 개발 시 (Docker 없이)
# DATABASE_URL=postgresql://bfai_user:bfai_password@localhost:5432/bfai_db
# DB_HOST=localhost

# ============================================
# Seoul Open API 설정
# ============================================

# 일반 인증키 (교통약자 시설, 출입구 폐쇄, 최단경로 등)
# 받는 방법: https://data.seoul.go.kr → 로그인 → API 키 발급
SEOUL_OPEN_API_KEY=YOUR_SEOUL_API_KEY_HERE

# 지하철 실시간 인증키 (실시간 열차위치, 도착정보)
# 받는 방법: https://data.seoul.go.kr → 로그인 → API 키 발급
SEOUL_REALTIME_API_KEY=YOUR_SEOUL_REALTIME_API_KEY_HERE

# ============================================
# OpenAI API 설정
# ============================================

# OpenAI API Key - RAG 고품질 안내문 생성용
# 받는 방법: https://platform.openai.com/api-keys
# 형식: sk-proj-xxxxxxxxxxxxx
OPENAI_API_KEY=YOUR_OPENAI_API_KEY_HERE

# ============================================
# FastAPI 서버 설정
# ============================================

API_HOST=0.0.0.0
API_PORT=8000
DEBUG=True
PROJECT_NAME=비파이(B-FAI) 실시간 길안내 서비스
VERSION=1.0.0

# ============================================
# CORS 설정 (프론트엔드 연동)
# ============================================

# 모든 도메인 허용
CORS_ORIGINS=*

# ============================================
# 캐시 설정
# ============================================

# Seoul Open API 캐시 유지 시간 (분)
API_CACHE_DURATION_MINUTES=5

# ============================================
# RAG 설정
# ============================================

# ChromaDB 저장 경로
CHROMA_DB_PATH=./data/chromadb

# 한국어 임베딩 모델
EMBEDDING_MODEL=sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2
